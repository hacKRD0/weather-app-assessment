{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/tests"]
}